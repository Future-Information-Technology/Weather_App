            <td><i class="fas fa-map-marker-alt"></i></td>
            <td><%= dataArr[0] %>, <%= dataArr[2] %></td>
        </tr>
        <tr>
            <td><i class="fas fa-temperature-high"></i></td>
            <td>Temperature : <%= dataArr[3] %> °C</td>
        </tr>
        <tr>
            <td><i class="fas fa-wind"></i></td>
            <td>Wind : <%= dataArr[4] %> mph</td>
        </tr>
        <tr>
            <td></td>
            <td>Condition : <%= dataArr[5] %></td>
        </tr>
    </table>

